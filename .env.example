# ==== ChronoRAG-Lite .env.example ====
# Copy to `.env` and adjust values for local runs.

# API
CR_API_HOST=0.0.0.0
CR_API_PORT=8000
CR_LOG_VERBOSE=true

# Data / Index paths (defaults are fine for local)
CR_DATA_DIR=./data
CR_INDEX_DIR=./indexes
CR_CHUNKS_CSV=./data/chunks.csv
CR_META_PARQUET=./data/chunk_meta.parquet
CR_IDS_NPY=./data/chunk_ids.npy
CR_FAISS_INDEX=./indexes/faiss.index

# Embeddings
CR_EMBED_MODEL=BAAI/bge-small-en-v1.5
CR_PREFER_FASTEMBED=true

# LLM (default is 20B; may not fit on a laptop)
# .env
CR_LLM_MODEL=Qwen/Qwen2.5-3B-Instruct
CR_LLM_MAX_NEW_TOKENS=256

# Tip for smaller dev model: mistralai/Mistral-7B-Instruct-v0.3

# Retrieval weights (POLAR-Lite)
CR_ALPHA=0.55
CR_BETA_TIME=0.25
CR_GAMMA_AUTH=0.15
CR_DELTA_AGE=0.05

# Controller (DHQC-Lite)
CR_TAU=0.80
CR_DELTA=0.20
CR_N_MAX=3
